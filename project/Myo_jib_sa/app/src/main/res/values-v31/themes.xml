<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Myo_jib_sa" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <!-- splash screen. -->
        <item name="android:windowSplashScreenBackground">#0F1C4D</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_app</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

</resources>