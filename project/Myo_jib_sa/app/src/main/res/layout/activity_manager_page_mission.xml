<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".community.ManagerPageMissionActivity">
    <!--상단바 레이아웃 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/mission_write_back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mission_complete_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="완료"
            android:textSize="15sp"
            android:textColor="#2D4AD0"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:background="#D8D8D8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout01"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view01">

        <EditText
            android:id="@+id/mission_missionName_input"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="미션명을 입력하세요."
            android:textColorHint="#707070"
            android:textStyle="bold"
            android:fontFamily="@font/font_inter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />



        <!-- calendar -->
        <LinearLayout
            android:id="@+id/calender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mission_missionName_input">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageButton
                    android:id="@+id/preMonth_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_schedule_calendar_left" />

                <TextView
                    android:id="@+id/month_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6월"
                    android:fontFamily="@font/font_inter"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <ImageButton
                    android:id="@+id/nextMonth_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_schedule_calendar_right" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendar_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <!--시작일 layout-->
        <LinearLayout
            android:id="@+id/layout_start_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calender_layout"
            >
            <TextView
                android:id="@+id/start_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="시작일"
                android:fontFamily="@font/font_inter"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/start_year_txt"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="2023"
                android:layout_marginEnd="5dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="년"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/start_month_txt"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="6"
                android:fontFamily="@font/font_inter"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:text="월"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/start_day_txt"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="7"
                android:fontFamily="@font/font_inter"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/calender_start_date_check_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingStart="10dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_schedule_calendar_black" />

        </LinearLayout>

        <!--종료일 layout-->
        <LinearLayout
            android:id="@+id/layout_end_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_start_day"
            >
            <TextView
                android:id="@+id/end_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:text="종료일"
                android:fontFamily="@font/font_inter"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/end_year_txt"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="2023"
                android:layout_marginEnd="5dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="년"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/end_month_txt"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="6"
                android:fontFamily="@font/font_inter"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:text="월"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/end_day_txt"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="7"
                android:fontFamily="@font/font_inter"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/calender_end_date_check_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingStart="10dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_schedule_calendar_black" />

        </LinearLayout>


        <!--편집예정-->


        <!--편집예정-->
        <EditText
            android:id="@+id/sub_memo_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/view_round_r5_gray"
            android:hint="메모📌"
            android:textStyle="bold"
            android:fontFamily="@font/font_inter"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_end_day" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>