<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_mission_detail_root"
    android:layout_width="match_parent"
    android:layout_height="612dp">

    <ImageView
        android:id="@+id/mission_title_iv"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:background="@drawable/background_mission_detail_dialog_img"
        android:clipToOutline="true"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@id/mission_detail_info_cl"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/exit_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mission_detail_info_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.77"
        app:layout_constraintTop_toBottomOf="@id/mission_title_iv"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/mission_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="2dp"
            android:fontFamily="@font/font_caption_text_4"
            android:background="@drawable/background_mission_detail_category"
            android:text="운동"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mission_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_title_3"
            android:text="개강이랑 싸우기"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:lineSpacingExtra="3dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/mission_category_tv"
            app:layout_constraintTop_toBottomOf="@+id/mission_category_tv" />

        <TextView
            android:id="@+id/mission_detail_period_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_paragraph_4"
            android:text="미션 기간"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/mission_category_tv"
            app:layout_constraintTop_toBottomOf="@+id/mission_title_tv" />

        <LinearLayout
            android:id="@+id/mission_detail_period_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/mission_detail_period_txt"
            app:layout_constraintTop_toBottomOf="@+id/mission_detail_period_txt">

            <TextView
                android:id="@+id/mission_start_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text="8월 20일"
                android:textColor="@color/main2"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/mission_detail_category_txt"
                app:layout_constraintTop_toBottomOf="@+id/mission_detail_title_txt" />

            <TextView
                android:id="@+id/mission_detail_from_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text=" 부터 "
                android:textColor="@color/gray7"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/mission_detail_category_txt"
                app:layout_constraintTop_toBottomOf="@+id/mission_detail_title_txt" />

            <TextView
                android:id="@+id/mission_end_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text="8월 26일"
                android:textColor="@color/main2"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/mission_detail_category_txt"
                app:layout_constraintTop_toBottomOf="@+id/mission_detail_title_txt" />

            <TextView
                android:id="@+id/mission_detail_to_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:text=" 까지"
                android:textColor="@color/gray7"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/mission_detail_category_txt"
                app:layout_constraintTop_toBottomOf="@+id/mission_detail_title_txt" />
        </LinearLayout>

        <TextView
            android:id="@+id/mission_detail_memo_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:text="메모"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/mission_detail_period_ll"
            app:layout_constraintStart_toStartOf="@+id/mission_memo_tv"
            app:layout_constraintBottom_toTopOf="@+id/mission_memo_tv" />

        <TextView
            android:id="@+id/mission_memo_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/pretendard_regular"
            android:hint="메모가 없습니다."
            android:textColorHint="@color/gray7"
            android:text="@string/mission_detail_memo_test"
            android:textColor="@color/gray7"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/mission_detail_memo_title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>