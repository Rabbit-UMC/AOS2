<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main2"
    tools:context=".signup.LoginActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/main4"
        android:layout_marginStart="-24dp"
        app:layout_constraintBottom_toBottomOf="@+id/kakao_login_title_txt"
        app:layout_constraintStart_toStartOf="@+id/kakao_login_title_txt" />
    <TextView
        android:id="@+id/kakao_login_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:text="묘집사"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_gugi"
        android:textFontWeight="400"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/kakao_login_desc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/kakao_login_desc"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_caption_text_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kakao_login_title_txt"/>
    <ImageButton
        android:id="@+id/kakao_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/kakao_login_btn"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>