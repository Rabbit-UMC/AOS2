<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/ic_mission_rectangle">

    <FrameLayout
        android:id="@+id/img_layout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_mission_img_background"
        android:padding="8dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="@id/layout"
        app:layout_constraintTop_toTopOf="@id/layout"
        app:layout_constraintBottom_toBottomOf="@id/layout">
        <ImageView
            android:id="@+id/mission_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mission_exercise"
            android:background="@android:color/transparent"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/mission_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:text="일정 이름"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_layout"
        app:layout_constraintTop_toTopOf="@id/layout"/>

    <TextView
        android:id="@+id/mission_intro_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:fontFamily="@font/font_inter"
        android:text="일정소개 입니다 제한 15자"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_layout"
        app:layout_constraintTop_toBottomOf="@id/mission_title_txt"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="@id/layout"
        app:layout_constraintEnd_toEndOf="@id/layout">
        <TextView
            android:id="@+id/mission_challenger_txt"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:fontFamily="@font/font_inter"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="18sp"
 />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_inter"
            android:text="명"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="@id/layout"
        app:layout_constraintBottom_toBottomOf="@id/layout"
        >
        <TextView
            android:id="@+id/mission_start_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_inter"
            android:text="시작일"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_inter"
            android:text=" - "
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mission_end_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/font_inter"
            android:text="종료일"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>