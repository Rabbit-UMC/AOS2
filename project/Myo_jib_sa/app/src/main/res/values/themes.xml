<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Myo_jib_sa" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#88474747</item>
        <item name="colorPrimaryVariant">#88474747</item>
        <item name="colorOnPrimary">#88474747</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <!-- splash screen. -->
<!--        <item name="android:windowSplashScreenBackground">#0F1C4D</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_app</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>-->
    </style>


    <!--바텀 네비게이션-->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/font_caption_text_4</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.PopupActivity"
        parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item> <!-- 액션바 제거 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- myPage tab text 색상 변경 -->
    <style name="BoldTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/font_inter</item>
    </style>

    <!-- numberpicker 테마 -->
    <style name = "NumberPickerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--글자크기-->
        <item name="android:textSize">12sp</item>

        <!--글꼴-->
        <item name="android:fontFamily">@font/font_caption_text_1</item>
        <!--구분선 색상 변경-->
        <item name="android:colorControlNormal">#C6C6C6</item>
        <item name="android:numbersTextColor">#707070</item>
        <!-- @android:color/transparent -->

    </style>

        <!-- extendedfloatingbutton -->
    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#234BD9</item>
        <item name="colorPrimaryDark">#234BD9</item>
        <item name="colorAccent">#234BD9</item>
    </style>

    <style name="Theme.Myo_jib_sa.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Myo_jib_sa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Myo_jib_sa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 일반 미션 tabLayout 텍스트 커스텀 -->
    <style name="mission_tab_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray7</item>
        <item name="android:fontFamily">@font/font_caption_text_3</item>
    </style>
    <!-- 일반 미션 tabLayout 선택 텍스트 커스텀 -->
    <style name="mission_tab_selected_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main2</item>
        <item name="android:fontFamily">@font/font_caption_text_1</item>
    </style>

    <!-- 일반 미션 tabLayout 커스텀-->
    <style name="mission_tab_style">
        <item name="tabTextAppearance">@style/mission_tab_text_style</item>
        <item name="tabSelectedTextAppearance">@style/mission_tab_selected_text_style</item>
        <item name="tabIndicatorHeight">24dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicator">@drawable/background_mission_tab_indicator</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <!-- TabLayout 텍스트 테마 -->
    <style name="schedule_tablayout_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray6</item>
        <item name="android:fontFamily">@font/font_caption_text_1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="adjustResizeStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="roundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/roundCornerModalStyle</item>
    </style>

    <style name="roundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_mission_create_calendar_dialog</item>
    </style>
</resources>